<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderBoard">

    <RelativeLayout
        android:id="@+id/RelativeLayoutText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#45B5E8">

        <ImageButton
            android:id="@+id/navToMainMenu2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/backarrow_foreground"
            android:text="Go To Menu" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/top_100_single_players"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeLayoutText"
        android:background="@color/teal_200">

        <RelativeLayout
            android:id="@+id/RLTop3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#F1EFEF">


        </RelativeLayout>

        <TextView
            android:id="@+id/FirstPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="User 1"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/IVFirstPlace"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/first_place" />

        <TextView
            android:id="@+id/SecondPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IVFirstPlace"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/IVFirstPlace"
            android:text="User 2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/IVFirstPlace"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="30dp"
            android:layout_toStartOf="@+id/IVFirstPlace"
            android:background="@android:color/transparent"
            android:src="@drawable/second_place" />

        <TextView
            android:id="@+id/ThirdPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IVFirstPlace"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="-40dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/IVFirstPlace"
            android:text="User 3"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/ImgThirdPlace"
            android:layout_width="60dp"

            android:layout_height="60dp"
            android:layout_below="@+id/IVFirstPlace"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/IVFirstPlace"
            android:background="@android:color/transparent"
            android:src="@drawable/third_place" />

        <ListView
            android:id="@+id/ReadUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RLTop3"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:divider="@color/teal_200"
            android:dividerHeight="8dp"
            android:fontFamily="@font/alfa_slab_one"
            android:scrollbars="vertical"
            android:textAlignment="center" />


    </RelativeLayout>



</RelativeLayout>