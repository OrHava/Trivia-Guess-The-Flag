<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderBoard">

    <RelativeLayout
        android:id="@+id/RelativeLayoutText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#68BCE3">

        <ImageButton
            android:id="@+id/navToMainMenu2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:scaleType="center"
            android:src="@drawable/previous_smaller2"
            android:text="Go To Menu" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/top_100_single_players"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeLayoutText"
        android:background="@color/teal_200">

        <ImageView
            android:id="@+id/IVFirstPlace"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/first_place" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/RLTop3"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/second_place" />

        <ImageView
            android:id="@+id/ImgThirdPlace"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/RLTop3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/third_place" />


        <RelativeLayout
            android:id="@+id/RLtop3Helpers"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_below="@+id/IVFirstPlace"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="-10dp"

            android:background="@drawable/rounded_corner">

            <ImageView
                android:id="@+id/ImgCountry_top_3_First_Place"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-35dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:src="@mipmap/world_map_icon_for_leaderboard" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RLTop3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/RLtop3Helpers"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner">


            <TextView
                android:id="@+id/FirstPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/user_1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/FirstPlaceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FirstPlace"
                android:layout_centerHorizontal="true"
                android:text="@string/user_1_score"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ImgCountry_top_3_Second_Place"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:src="@mipmap/world_map_icon_for_leaderboard" />


            <ImageView
                android:id="@+id/ImgCountry_top_3_Third_Place"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:src="@mipmap/world_map_icon_for_leaderboard" />

            <TextView
                android:id="@+id/SecondPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImgCountry_top_3_Second_Place"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:text="@string/user_2"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SecondPlaceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SecondPlace"
                android:layout_marginStart="35dp"
                android:text="@string/user_2_score"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/ThirdPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImgCountry_top_3_Third_Place"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="35dp"
                android:text="@string/user_3"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ThirdPlaceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SecondPlace"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="35dp"
                android:text="@string/user_3_score"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <ListView
            android:id="@+id/ReadUsers"
            android:layout_width="wrap_content"
            android:layout_height="420dp"
            android:layout_above="@+id/UserPeronalScoreLayout"
            android:layout_below="@+id/RLTop3"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:divider="@color/teal_200"
            android:dividerHeight="8dp"
            android:fontFamily="@font/alfa_slab_one"
            android:foregroundGravity="center"
            android:scrollbars="vertical"
            android:textAlignment="center" />

        <RelativeLayout
            android:id="@+id/UserPeronalScoreLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:background="#F1EFEF">


            <TextView
                android:id="@+id/Personal_place_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="@string/place"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/Personal_ImgCountry"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/Personal_place_textView"
                android:background="@android:color/transparent"
                android:src="@mipmap/world_map_icon_for_leaderboard" />

            <TextView
                android:id="@+id/Personal_username_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/Personal_ImgCountry"
                android:maxLines="1"
                android:text="@string/username"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/Personal_score_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Personal_username_textView"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/Personal_ImgCountry"
                android:maxLines="1"
                android:text="@string/score"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>



    </RelativeLayout>








</RelativeLayout>